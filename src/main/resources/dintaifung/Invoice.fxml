<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" alignment="TOP_CENTER" prefWidth="480" prefHeight="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dintaifung.InvoiceController">
    <!-- 標題 -->
    <Label text="帳單明細" style="-fx-font-size: 28px; -fx-padding: 15; -fx-text-fill: #333;" />

    <!-- 帳單內容區 -->
    <TextArea fx:id="invoiceTextArea" 
              editable="false" 
              wrapText="true" 
              prefHeight="500" 
              prefWidth="420"
              style="-fx-font-family: 'Courier New'; -fx-font-size: 18px; -fx-background-color: #f9f9f9; -fx-border-color: #ddd;" />

    <!-- 關閉按鈕 -->
    <Button fx:id="closeButton" text="關閉" 
            style="-fx-background-color: #f06292; -fx-text-fill: white; -fx-font-size: 16px;" 
            prefWidth="120" />
</VBox>
